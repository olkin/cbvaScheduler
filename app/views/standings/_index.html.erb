<h2> Standings </h2>
<% if @standings.any? %>
    <table class='table table-striped table-bordered table-hover table-condensed'>
      <thead>
      <tr>
        <th>#</th>
        <th>Pool/Tier</th>
        <th>Team</th>
        <th>Captain</th>

        <% if vip? %>
            <th>Email</th>
        <% end %>

        <% if admin? %>
            <th colspan='2'></th>
        <% end %>

      </tr>
      </thead>

      <tbody>
      <% @standings.each do |standing| %>
          <tr>
            <td><%= standing.rank %></td>
            <td><%= standing.tier %></td>
            <td><%= link_to standing.team.name, team_path(standing.team) %></td>
            <td><%= standing.team.captain %></td>

            <% if vip? %>
                <td><%= standing.team.email %></td>
            <% end %>

            <% if admin? %>
                <td><%= link_to 'Edit', edit_standing_path(standing) %></td>
                <td><%= link_to 'Destroy', standing, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>

          </tr>
      <% end %>
      </tbody>
    </table>

<% else %>
    No teams registered yet.
<% end %>
<br>

<% if admin? %>
    <%= link_to 'Add team', new_week_standing_path(@week) %>
<% end %>