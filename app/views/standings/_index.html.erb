<h2> Standings </h2>

<% if @standings.any? %>
    <table class='table table-striped table-bordered table-hover table-condensed'>
      <thead>
      <tr>
        <th>#</th>
        <th>Pool/Tier</th>
        <th>Team</th>
        <th>Captain</th>

        <% vip_area do %>
            <th>Email</th>
        <% end %>

        <% admin_area do %>
            <th colspan='2'></th>
        <% end %>

      </tr>
      </thead>

      <tbody>
        <%= render @standings %>
      </tbody>
    </table>

<% else %>
    No teams registered yet.
<% end %>
<br>

<% admin_area do %>
    <%= link_to 'Add team', new_week_standing_path(@week) %>
<% end %>