<%= form_for [@week, @standing] do |f| %>
  <% if @standing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@standing.errors.count, 'error') %> prohibited this team from being saved:</h2>

      <ul>
      <% @standing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.fields_for :team do |builder| %>

        <%= builder.hidden_field :league_id, value: @standing.week.league.id %>

        <div class="field">
          <%= builder.label :name %><br>
          <%= builder.text_field :name %>
        </div>
        <div class="field">
          <%= builder.label :captain %><br>
          <%= builder.text_field :captain %>
        </div>
        <div class="field">
          <%= builder.label :email %><br>
          <%= builder.text_field :email %>
        </div>

    <% end -%>

  <div class="field">
    <%= f.label :rank %><br>
    <%= f.number_field :rank, min: 1 %>
  </div>

  <div class="field">
    <%= f.label :tier %><br>
    <%= f.number_field :tier, min: 1 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
