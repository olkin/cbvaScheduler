<h1>Listing standings for <%= @week.league.description%>, week <%= @week.week%> </h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Tier</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @standings.each do |standing| %>
      <tr>
        <td><%= standing.rank %></td>
        <td><%= standing.tier %></td>
        <td><%= standing.team.name %></td>
        <td><%= link_to 'Show', standing %></td>
        <td><%= link_to 'Edit', edit_standing_path(standing) %></td>
        <td><%= link_to 'Destroy', standing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', @week %>

