<ul>
    <%= render partial: "weeks/week_link", collection: @standing.league.weeks, as: :week %>
</ul>

<% @team = @standing.team %>
<%= render 'teams/show' %>

<p>
  <strong>Pool:</strong>
  <%=  @standing.tier %>
</p>

<p>
  <strong>Team#</strong>
  <%=  @standing.rank %>
</p>

<% if @standing.matches.any? %>
    <h2>Results/Schedule for <%= @standing.week.name %></h2>
    <%= render 'schedule' %>
<%else%>
    <h2>Schedule is not ready for <%= @standing.week.name %></h2>
<%end%>


<%= link_to 'PDF version', standing_path(@standing, format: 'pdf')%> |
<%= link_to 'League', @standing.league %>
