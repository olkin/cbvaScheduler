<h2>Tiers Settings</h2>
<% if @tier_settings.any? %>
    <table>
      <thead>
      <tr>
        <th>Tier</th>
        <th>Name</th>
        <th>Total teams</th>
        <th>Teams down</th>
        <th>Day</th>
        <th>Schedule pattern</th>
        <th>Cycle</th>
        <th>Set points</th>
        <th>Times</th>
        <% if admin? %>
            <th colspan="3"></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <%= render @tier_settings %>
      </tbody>
    </table>
<% else %>
    Tiers are not set up.
<% end %>

<br>

<% if admin? %>
    <%= link_to 'New Tier setting', new_week_tier_setting_path(@week) %>
<% end %>
