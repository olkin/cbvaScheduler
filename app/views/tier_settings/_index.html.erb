<h2>Tiers Settings</h2>
<% if @tier_settings.any? %>
    <table>
      <thead>
      <tr>
        <th>Tier</th>
        <th>Name</th>
        <th>Total teams</th>
        <th>Teams down</th>
        <th>Day</th>
        <th>Schedule pattern</th>
        <th>Cycle</th>
        <th>Set points</th>
        <th>Times</th>
        <% if admin? %>
            <th colspan="3"></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% @tier_settings.each do |tier_setting| %>
          <tr>
            <td><%= tier_setting.tier %></td>
            <td><%= tier_setting.name %></td>
            <td><%= tier_setting.total_teams %></td>
            <td><%= tier_setting.teams_down %></td>
            <td><%= tier_setting.day %></td>
            <td><%= tier_setting.schedule_pattern %></td>
            <td><%= tier_setting.cycle %></td>
            <td><%= tier_setting.set_points %></td>
            <td><%= tier_setting.match_times %></td>

            <% if admin? %>
                <td><%= link_to 'Show', tier_setting %></td>
                <td><%= link_to 'Edit', edit_tier_setting_path(tier_setting) %></td>
                <td><%= link_to 'Destroy', tier_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    Tiers are not set up.
<% end %>

<br>

<% if admin? %>
    <%= link_to 'New Tier setting', new_week_tier_setting_path(@week) %>
<% end %>
