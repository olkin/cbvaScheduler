<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Rank</th>
    <th>Team</th>
    <th>Matches<br/>won/played</th>
    <th>Sets<br/>won/played</th>
    <th>Points<br/>diff</th>
    <!-- <th>Cur Rank</th> -->
  </tr>
  </thead>
  <tbody>
  <%@tier_standings.each do |standing|%>
      <tr>
        <td><%=standing.rank%></td>
        <td><%= link_to "#{standing.team.name}", standing %>
          <br/> <%= standing.team.captain %> </td>
        <td><%= "#{standing.matches_won}/#{standing.matches_played}/#{standing.matches.size}" %></td>
        <td><%= "#{standing.sets_won}/#{standing.sets_played}" %></td>
        <td><%= standing.points_diff %></td>
        <!--<td></td> -->
      </tr>
  <%end%>
  </tbody>
</table>