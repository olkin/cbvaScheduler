<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Captain</th>
      <th>Email</th>
      <th>League</th>
<!--      <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to "#{team.name}", team  %></td>
        <td><%= team.captain %></td>
        <td><%= team.email %></td>
        <td><%= link_to "#{team.league.description}", league_path(team.league) %></td>
<!--        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->
      </tr>
    <% end %>
  </tbody>
</table>

