<h1>Weeks for <%= @league.description %></h1>

<table>
  <thead>
  <tr>
    <th>Week</th>
    <th>Cycle</th>
    <th colspan = "3"> </th>
  </tr>
  </thead>

  <tbody>
  <% @weeks.each do |week| %>
      <tr>
        <td><%= week.week %></td>
        <td><%= week.cycle %></td>
        <td><%= link_to 'Show', week %></td>
        <td><%= link_to 'Edit', edit_week_path(week) %></td>
        <td><%= link_to 'Destroy', week, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Add new week', new_league_week_path(@league) %> |
<%= link_to 'Back', league_path(@league) %>
